@model int

<div class="row">
    <form method="post" action="/home/newad">
        <h3>New Ad</h3>
        <br />
        <input type="text" class="form-control" placeholder="Title" name="title" />
        <br />
        <input type="text" class="form-control" placeholder="Phone Number" name="number" />
        <br />
        <textarea class="form-control" placeholder="Description..." name="description" rows="3"></textarea>
        <br/>
        <input type="hidden" name="userId" value="@Model"/>
        <button class="btn btn-primary">Save</button>
        <br />
    </form>
</div>

