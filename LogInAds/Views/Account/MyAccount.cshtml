@model MyAccountViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @foreach (Ad ad in Model.Ads)
        {
            <div class="well">
                <h5>@ad.Title</h5>
                <h5>Phone Number: @ad.Number</h5>
                <h3>Details:</h3>
                <p>@ad.Description</p>
                <form method="post" action="/home/deleteAd">
                    <input type="hidden" name="id" value="@ad.UserId" />
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        }
    </div>
</div>

